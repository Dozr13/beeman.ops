{
  "name": "@ops/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "prisma",
    "prisma.config.ts"
  ],
  "scripts": {
    "prisma": "prisma",
    "generate": "prisma generate --config prisma.config.ts",
    "db:push": "prisma db push --config prisma.config.ts",
    "studio": "prisma studio --config prisma.config.ts",
    "build": "yarn generate && tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json -w",
    "typecheck": "yarn generate && tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "7.4.0",
    "pg": "^8.18.0",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "prisma": "7.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.0"
  }
}
